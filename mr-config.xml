    <hbase.zookeeper.quorum>192.168.254.86,192.168.254.96,192.168.254.107</hbase.zookeeper.quorum>
    <hbase.zookeeper.property.clientPort>2181</hbase.zookeeper.property.clientPort>
    <hbase.zookeeper.property.maxClientCnxns>400</hbase.zookeeper.property.maxClientCnxns>
    <hbase.znode.parent>/hbase</hbase.znode.parent>

    <!-- Local Settings -->
    <mapping-info>
        <partition>
            data_date=20170717
        </partition>
        <column-mapping>
            <hive-column-name>imei</hive-column-name>
            <hive-column-type>string</hive-column-type>
            <rowkey>true</rowkey>
        </column-mapping>
        <column-mapping>
            <hive-column-name>value</hive-column-name>
            <hive-column-type>float</hive-column-type>
            <hbase-column-family>#family#</hbase-column-family>
            <hbase-column-qualifier>feature</hbase-column-qualifier>
        </column-mapping>
        <column-mapping>
            <hive-column-name>feature</hive-column-name>
            <hive-column-type>string</hive-column-type>
        </column-mapping>
        <column-mapping>
            <hive-column-name>family</hive-column-name>
            <hive-column-type>string</hive-column-type>
        </column-mapping>
    </mapping-info>
</config>

